<Window x:Class="AdvancedDownloadManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedDownloadManager"
        xmlns:controls="clr-namespace:AdvancedDownloadManager.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Width="600" Height="350" Background="{StaticResource windowBackgroundColor}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="3"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>

		<Rectangle Fill="{StaticResource topRectangle}" />
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Rectangle Fill="{StaticResource leftBarBackgroundColor}"/>
			
			<ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
				<StackPanel Name="DownloadList" Margin="10 0 10 0">
					<StackPanel.Resources>
						<Style TargetType="{x:Type controls:DownloadEntry}">
							<Setter Property="Margin" Value="0 10 0 0"></Setter>
						</Style>
					</StackPanel.Resources>
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>